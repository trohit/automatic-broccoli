# essential packages that I possibly need on an ubuntu workstation
# sudo dpkg --get-selections
sudo apt-get update

sudo apt-get install build-essential 
sudo apt-get install tree
sudo apt-get install screen
sudo apt-get install tmux
sudo apt-get install aria2c

# installs / removes packages as needed to install python
sudo apt-get build-dep python
sudo apt install git

# do the right extraction - alternative to tar, automatically extracts any zip format
sudo apt-get install dtrx 


# desktop
sudo apt-get install terminator
sudo apt-get install fortune 
sudo apt autoremove

# nice to have 3rd party utilities
# https://github.com/dvorka/hstr
sudo add-apt-repository ppa:ultradvorka/ppa
sudo apt-get update
sudo apt-get install hh

